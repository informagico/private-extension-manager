{
  "name": "private-extension-manager",
  "displayName": "Private extension manager",
  "description": "Install and keep up to date private VS Code extension",
  "publisher": "juliencroain",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:privateExtensionsSidebar.sidebarView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "privateExtensionsSidebar",
          "title": "Private Marketplace",
          "icon": "$(symbol-class)"
        }
      ]
    },
    "views": {
      "privateExtensionsSidebar": [
        {
          "type": "webview",
          "id": "privateExtensionsSidebar.sidebarView",
          "name": "Extensions",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "privateExtensionsSidebar.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "privateExtensionsSidebar.addItem",
        "title": "Add Item",
        "icon": "$(plus)"
      },
      {
        "command": "privateExtensionsSidebar.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "privateExtensionsSidebar.refresh",
          "when": "view == privateExtensionsSidebar.sidebarView",
          "group": "navigation"
        },
        {
          "command": "privateExtensionsSidebar.addItem",
          "when": "view == privateExtensionsSidebar.sidebarView",
          "group": "navigation"
        },
        {
          "command": "privateExtensionsSidebar.openSettings",
          "when": "view == privateExtensionsSidebar.sidebarView",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Private Extensions",
      "properties": {
        "privateExtensionsSidebar.showIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show icons in the sidebar items"
        },
        "privateExtensionsSidebar.itemsPerPage": {
          "type": "number",
          "default": 10,
          "description": "Number of items to show per page"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
