{
  "name": "private-extension-manager",
  "displayName": "Private extension manager",
  "description": "Install and keep up to date private VS Code extension",
  "publisher": "juliencroain",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:privateExtensionsSidebar.sidebarView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "privateExtensionsSidebar",
          "title": "Private Marketplace",
          "icon": "$(symbol-class)"
        }
      ]
    },
    "views": {
      "privateExtensionsSidebar": [
        {
          "type": "webview",
          "id": "privateExtensionsSidebar.sidebarView",
          "name": "Extensions",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "privateExtensionsSidebar.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "privateExtensionsSidebar.addItem",
        "title": "Add Directory",
        "icon": "$(plus)"
      },
      {
        "command": "privateExtensionsSidebar.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "privateExtensionsSidebar.scanDirectories",
        "title": "Scan Directories",
        "icon": "$(search)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "privateExtensionsSidebar.refresh",
          "when": "view == privateExtensionsSidebar.sidebarView",
          "group": "navigation"
        },
        {
          "command": "privateExtensionsSidebar.addItem",
          "when": "view == privateExtensionsSidebar.sidebarView",
          "group": "navigation"
        },
        {
          "command": "privateExtensionsSidebar.scanDirectories",
          "when": "view == privateExtensionsSidebar.sidebarView",
          "group": "navigation@2"
        },
        {
          "command": "privateExtensionsSidebar.openSettings",
          "when": "view == privateExtensionsSidebar.sidebarView",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Private Extensions",
      "properties": {
        "privateExtensionsSidebar.showIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show icons in the sidebar items"
        },
        "privateExtensionsSidebar.itemsPerPage": {
          "type": "number",
          "default": 10,
          "description": "Number of items to show per page"
        },
        "privateExtensionsSidebar.vsixDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of directories to scan for .vsix files",
          "examples": [
            [
              "~/extensions",
              "/path/to/private/extensions",
              "C:\\Extensions"
            ]
          ]
        },
        "privateExtensionsSidebar.autoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan directories when .vsix files are added or removed"
        },
        "privateExtensionsSidebar.scanInterval": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "description": "Interval in seconds to automatically refresh extension list (0 to disable)"
        },
        "privateExtensionsSidebar.showFileSize": {
          "type": "boolean",
          "default": false,
          "description": "Show file size information for extensions"
        },
        "privateExtensionsSidebar.showLastModified": {
          "type": "boolean",
          "default": false,
          "description": "Show last modified date for extensions"
        },
        "privateExtensionsSidebar.sortBy": {
          "type": "string",
          "enum": [
            "name",
            "author",
            "lastModified",
            "fileSize",
            "version"
          ],
          "default": "name",
          "description": "Sort extensions by this criteria"
        },
        "privateExtensionsSidebar.sortOrder": {
          "type": "string",
          "enum": [
            "ascending",
            "descending"
          ],
          "default": "ascending",
          "description": "Sort order for extensions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
